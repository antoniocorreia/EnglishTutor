@model SistEduc.Models.Alternativa

@{
    ViewBag.Title = "Adicionar alternativa";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Adicionar alternativa</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Pergunta")">Perguntas</a>
            </li>
            <li>
                <a href="@Url.Action("Edit", "Pergunta", new { id = ViewBag.IdPerguntaModel})">Editar Pergunta</a>
            </li>
            <li>
                <a>Adicionar Alternativa</a>
            </li>

        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Alternativa</h4>
                            <hr />

                            <div class="form-group">
                                @Html.LabelFor(model => model.IdPergunta, "Pergunta", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IdPergunta", null , htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                                    <input type="hidden" name="IdPergunta" value="@ViewBag.IdPerguntaModel" />
                                    @Html.ValidationMessageFor(model => model.IdPergunta, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.RespostaCorreta, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.RespostaCorreta)
                                        @Html.ValidationMessageFor(model => model.RespostaCorreta, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        <a href="@Url.Action("Edit","Pergunta",new { id=ViewBag.IdPerguntaModel})">Voltar</a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

