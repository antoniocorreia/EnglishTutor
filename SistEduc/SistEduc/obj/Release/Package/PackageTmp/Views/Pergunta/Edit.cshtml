@model SistEduc.Models.Pergunta

@{
    ViewBag.Title = "Editar Pergunta";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Editar Pergunta</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Pergunta")">Perguntas</a>
            </li>
            <li>
                <a>Editar Pergunta</a>
            </li>

        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Pergunta</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Enunciado, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Enunciado, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Enunciado, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IdTema, "Tema", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IdTema", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdTema, "", new { @class = "text-danger" })
                                </div>
                            </div>







                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Salvar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Voltar para lista", "Index")
                    </div>
                </div>
            </div>

            <div class="ibox float-e-margins">

                <div class="ibox-content">

                    <h4>Alternativas</h4>
                    <hr />
                    <a href="@Url.Action("Create","Alternativa", new {id=Model.Id })" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Adicionar</a>
                    <div class="row">
                        <div class="col-lg-6">
                            <hr />

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Texto</th>
                                        <th>Resposta Correta</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var alternativa in Model.Alternativa)
                                    {
                                        <tr>
                                            <td>@alternativa.Id</td>
                                            <td>@alternativa.Texto</td>
                                            @if (alternativa.RespostaCorreta == true)
                                            {
                                                <td><i class="fa fa-check-square-o"></i></td>
                                            }
                                            else {
                                                <td></td>
                                            }
                                            <td>
                                                <a href="@Url.Action("Edit","Alternativa", new {id=alternativa.Id })" class="btn btn-primary"><i class="fa fa-edit"></i> Editar</a>
                                                <a href="@Url.Action("Delete","Alternativa", new {id=alternativa.Id })" class="btn btn-primary"><i class="fa fa-trash"></i> Excluir</a>
                                            </td>

                                        </tr>
                                    }


                                </tbody>
                            </table>


                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
