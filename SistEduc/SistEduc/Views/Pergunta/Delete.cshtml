@model SistEduc.Models.Pergunta

@{
    ViewBag.Title = "Excluir Pergunta";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Excluir Pergunta</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Pergunta")">Perguntas</a>
            </li>
            <li>
                <a>Excluir Pergunta</a>
            </li>

        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    <h3>Tem certeza que deseja excluir a pergunta?</h3>
                    <div>
                        <h4>Pergunta</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Enunciado)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Enunciado)
                            </dd>

                            <dt>
                                Tema
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Tema.Nome)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Excluir" class="btn btn-default" /> |
                                @Html.ActionLink("Voltar para lista", "Index")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

